<Page x:Class="LearnShool_Zaripova.PageS.AddServis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearnShool_Zaripova.PageS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddServis">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="NameServiseTbl"
                   Grid.ColumnSpan="2"
                   Grid.Row="1"
                   Text="Наименование продукции"/>
        <TextBlock x:Name="PriseServiseTbl"
           Grid.ColumnSpan="2"
           Grid.Row="2"
           Text="Стоимость продукции"/>
        <TextBlock x:Name="TimeServiseTbl"
   Grid.ColumnSpan="2"
           Grid.Row="3"
   Text="Длительность"/>
        <TextBlock x:Name="DescriptionServiseTbl"
   Grid.ColumnSpan="2"
           Grid.Row="4"
   Text="Описание продукции"/>
        
        <TextBox x:Name="NameServiseTb"
        Grid.ColumnSpan="3"
        Grid.Column="2"
        Grid.Row="1"/>
        <TextBox x:Name="TimeServiseTb"
        Grid.ColumnSpan="3"
        Grid.Column="2"
        Grid.Row="2"/>
        <TextBox x:Name="PriceServiseTb"
        Grid.ColumnSpan="3"
        Grid.Column="2"
        Grid.Row="3"/>
        <TextBox x:Name="DescriptionServiseTb"
        Grid.ColumnSpan="3"
        Grid.Column="2"
        Grid.Row="4"/>
        <ComboBox x:Name="DiscountCb"
                  Grid.Row="5"
                  Grid.Column="2"
                  Grid.ColumnSpan="3">
        </ComboBox>
        <Image Grid.Column="5"
               Grid.Row="1"
               Grid.ColumnSpan="3"
               Grid.RowSpan="4"/>
        <Button x:Name="SaveBtn"
                Click="SaveBtn_Click"
                Grid.Column="5"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Height="50"
                Width="150"
                Content="Сохранить"/>
    </Grid>
</Page>
